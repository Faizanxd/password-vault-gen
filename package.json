{
  "name": "password-vault",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "dev": "concurrently \"npm --workspace apps/frontend run dev\" \"npm --workspace apps/api run dev\"",
    "build": "npm --workspace apps/frontend run build && npm --workspace apps/api run build",
    "lint": "eslint --ext .ts,.tsx --max-warnings 0 .",
    "format": "prettier --write .",
    "typecheck": "tsc -p tsconfig.base.json --noEmit"
  },
  "devDependencies": {
    "@types/node": "^24.7.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.3.0",
    "prettier": "^2.8.8",
    "typescript": "^5.9.3"
  }
}
